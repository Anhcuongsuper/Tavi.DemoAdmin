
@{
    ViewBag.Title = "Quản lý tập tin";
}
@using Tavi.Core.HtmlEx;

<style>
    .input-group .input-group-append .btn {
        margin-left: 5px;
        cursor: pointer;
    }
</style>

<div id="formview">
    @using (Html.BeginForm())
    {
        @Html.Js("Scripts/Extenstion/fileManager.js")
        @Html.Hidden("hdurl", "/Extension/FileManager")
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Quản lý file</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Tiện ích</a></li>
                            <li class="breadcrumb-item active">Quản lý file</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 col-6">
                                        <div class="card">
                                            <div class="card-header bg-primary">
                                                Upload file
                                            </div>
                                            <div class="card-body p-0">
                                                <div class="m-2">
                                                    <div class="input-group">
                                                        <div class="custom-file">
                                                            <input type="file" class="custom-file-input" multiple id="customFile">
                                                            <label class="custom-file-label" for="customFile">Thêm file</label>
                                                        </div>
                                                        <div class="input-group-append">
                                                            <span class="btn btn-info btn-flat" id="btnUploadAllFile"><i class="fa fa-upload"></i>&nbsp; Tải lên</span>
                                                            <span class="btn btn-info btn-flat" id="btnClearAllFile"><i class="fa fa-sync"></i>&nbsp; Làm mới</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <table class="table table-header-fixed" id="dataGridFileLoading" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th width="40%" class="text-left">File name</th>
                                                            <th width="20%" class="text-right">Size</th>
                                                            <th width="30%" class="text-center">Processing</th>
                                                            <th width="10%" class="text-center">#</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-6">
                                        <div class="card">
                                            <div class="card-header bg-primary">
                                                List file uploaded
                                            </div>
                                            <div class="card-body table-responsive p-0">
                                                <div id="dataGrid">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</div>