
@{
    ViewBag.Title = "Danh sách chức vụ";
}
@using Tavi.Core.HtmlEx;
<div id="formview">
    @using (Html.BeginForm())
    {
        @Html.Js("Scripts/View/chucvu.js")
        @Html.Hidden("hdurl", "/BoMayToChuc/ChucVu/Index")
        @Html.Hidden("hdPage");
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Danh sách chức vụ</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Quản trị</a></li>
                            <li class="breadcrumb-item active">Chức vụ</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-5 col-lg-5 col-sm-12">
                                        @Html.TextBox("hdMaChucVu", ViewBag.hdMaChucVu as String, new { @class = "form-control", @placeholder = "Nhập mã chức vụ" })
                                    </div>
                                    <div class="col-lg-5 col-lg-5">
                                        @Html.TextBox("hdTenChucVu", ViewBag.hdTenChucVu as String, new { @class = "form-control", @placeholder = "Nhập tên chức vụ" })
                                    </div>
                                    <div class="col-md-2 col-lg-2 col-sm-12">
                                        @Html.Button("Tìm kiếm", "btn btn-primary", "btnTimKiem", "fa fa-search")
                                    </div>
                                </div>
                            </div>
                            <div class="card-body table-responsive">
                                <div id="dataGrid"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div id="Create" class="btnThemMoi">
            <div class="btn_plus">
                <div class="ctask_ttip">
                    <span class="label label-default">Thêm mới chức vụ</span>
                </div>  
                <a>
                    <img src="/Content/Images/plusct.png" class="add_icn">
                </a>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script type="text/javascript" language="javascript">
        
    </script>
}
